<!doctype html>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="wrapper">

    <div class="navbar">
      <div class="container">
        <h1><a href="/">Dashboard</a></h1>
      </div>
    </div>

    <div class="container form">
      <h2>Input</h2>
      <form method="post" action="/new">
        <div class="form__wrap">
          <label for="title">title</label>
          <input type="text" name="title" id="title" required>
        </div>
        <div class="form__wrap">
          <label for="content_overview">content_overview</label>
          <textarea rows="5" name="content_overview" id="content_overview"></textarea>
        </div>
        <div class="form__wrap">
          <label for="content_detail">content_detail</label>
          <textarea rows="5" name="content_detail" id="content_detail"></textarea>
        </div>
        <input type="submit" name="" value="POST" class="form__submit">
      </form>
    </div>

    <div class="container data">
      <h2>Output</h2>
      <ul class="jobs">
        <% @jobs.each do |jobs| %>
        <li class="jobs__list" data-id="<%= jobs.id %>">
          <div class="jobs__list__inner">
            <h3>ID:</h3>
            <p><%= h jobs.id %></p>
            <h3>Title:</h3>
            <p><%= h jobs.title %></p>
            <h3>Overview:</h3>
            <p><%= h jobs.content_overview %></p>
            <h3>Detail:</h3>
            <p><%= h jobs.content_detail %></p>
          </div>
          <button class="jobs__delete">DELETE</button>
          <a class="jobs__edit" href="/<%= jobs.id %>/edit">EDIT</a>
        </li>
        <% end %>
      </ul>
    </div>

  </div>
  <script src="/js/bundle.js"></script>
</body>
</html>