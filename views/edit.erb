<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="wrapper">

    <div class="navbar">
      <div class="container">
        <h1><a href="/">Dashboard</a></h1>
      </div>
    </div>

    <div class="container form">
      <h2>Edit <%= @jobs.title %></h2>
      <form method="post" action="/<%= @jobs.id %>/edit">
        <input type="hidden" name="_method" value="PUT">

        <!-- タイトル -->
        <div class="form__wrap">
          <label for="title">title</label>
          <input type="text" name="title" id="title" required value="<%= @jobs.title %>">
        </div>

        <input type="submit" name="" value="UPDATE" class="form__submit">
      </form>
    </div>

  </div>
  <script src="/js/bundle.js"></script>
</body>
</html>